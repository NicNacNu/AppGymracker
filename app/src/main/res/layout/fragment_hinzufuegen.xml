<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Übung Hinzufügen oder Entfernen"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/editTextWorkoutName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Übungsname eingeben"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/editTextPersonalRecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Personal Record"
        android:textColor="@color/black"
        />

    <Button
        android:id="@+id/buttonSaveWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speichern"
        android:textColor="@color/white"
        />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:title="Übung hinzufügen"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/buttonOpenExerciseFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@color/white"
            android:contentDescription="Übung Löschen"
            android:outlineProvider="background"
            android:padding="16dp"
            android:src="@android:drawable/ic_menu_delete"
            android:layout_marginRight="4dp"/>
    </androidx.appcompat.widget.Toolbar>
</LinearLayout>
