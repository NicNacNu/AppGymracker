<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    android:textColor= "@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/workoutTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="Workout Detail"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/textPersonalRecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="Personal Record (kg)"
            android:textColor="@color/black"

            />

        <EditText
            android:id="@+id/editArbeitsSets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Anzahl der Arbeits Sets"
            android:inputType="number"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/editWiederholungen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Anzahl der Wiederholungen"
            android:inputType="number"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/editMaxGewicht"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Max Gewicht (kg)"
            android:inputType="numberDecimal"
            android:textColor="@color/black"
            />

        <Button
            android:id="@+id/btnSpeichern"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Speichern"
            android:textColor="@color/white"
            />

    </LinearLayout>
</ScrollView>
